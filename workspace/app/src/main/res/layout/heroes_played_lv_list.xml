<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgHeroplayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:src="@drawable/action_search" />

    <TextView
        android:id="@+id/txtHeroplayed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight=".2"
        android:layout_marginLeft="5dp"
        android:text="Pudge" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight=".2"
        android:weightSum = "200"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeroplayedmatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7,623,286" />

        <TextView
            android:id="@+id/barHeroplayedmatch"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@android:color/holo_red_dark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight=".2"
        android:weightSum = "200"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeroplayedwinrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="48.02%" />

        <TextView
            android:id="@+id/barHeroplayedwinrate"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#a9cf54" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_weight=".2"
        android:weightSum = "200"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtHeroplayedkda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.33" />

        <TextView
            android:id="@+id/barHeroplayedkda"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="@android:color/holo_orange_dark" />

    </LinearLayout>
    
</LinearLayout>